{
    "name": "elm-is-fun",
    "description": "An elm pilot test by myself.",
    "repository": "https://github.com/luckynum7/elm-is-fun.git",
    "license": "MIT",
    "config": {
	"precommit": "echo commiting",
	"prepush": "npm test && echo https://luckynum7.github.io/elm-is-fun/"
    },
    "scripts": {
	"test": "elm-test",
	"clean:src": "node -e \"var d='elm-stuff',fs=require('fs-extra');fs.emptydir(d);\"",
	"clean:test": "node -e \"var d='tests/elm-stuff',fs=require('fs-extra');fs.emptydir(d);\"",
	"clean:build": "node -e \"var d='_build',fs=require('fs-extra');fs.emptydir(d);\"",
	"clean": "run-p clean:*",
	"build-js": "webpack -p",
	"prebuild:style": "node -e \"var d='_build/css',fs=require('fs-extra');fs.ensureDir(d);\"",
	"build:style": "echo stylus src/assets/stylus/main.styl -c -o _build/css",
	"build:markup": "pug src -o _build",
	"build": "npm-run-all clean:build --parallel build-js build:*",
	"watch:build": "run-p \"build:* -- -w\"",
	"watch:test": "elm-test -w",
	"watch": "run-p watch:*",
	"deploy:sync": "node -e \"var s='_build',d='docs',fs=require('fs-extra');fs.emptydir(d,function(err){if(!err)fs.copy(s,d)});\"",
	"deploy": "run-s test build deploy:sync",
	"open:prod": "opener https://luckynum7.github.io/elm-is-fun/",
	"open:dev": "opener http://localhost:8080/webpack-dev-server/",
	"serve": "webpack-dev-server --content-base _build/",
	"dev": "npm-run-all clean:build --parallel serve watch open:dev"
    },
    "devDependencies": {
	"elm-test": "^0.17.3",
	"elm-webpack-loader": "^3.0.6",
	"fs-extra": "^0.30.0",
	"husky": "^0.12.0",
	"npm-run-all": "^3.1.1",
	"opener": "^1.4.2",
	"pug-cli": "^1.0.0-alpha6",
	"stylus": "^0.54.5",
	"webpack": "^1.13.2",
	"webpack-dev-server": "^1.16.2"
    },
    "version": "0.1.0"
}
