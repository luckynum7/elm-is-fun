{
    "name": "elm-is-fun",
    "description": "An elm pilot test by myself.",
    "repository": "https://github.com/luckynum7/elm-is-fun.git",
    "license": "MIT",
    "config": {
        "ghooks": {
            "pre-commit": "npm run build && git add .",
            "pre-push": "echo pushing"
        }
    },
    "scripts": {
        "postinstall": "elm-package install",
        "clean": "node -e \"var d='docs',fs=require('fs-extra');fs.emptydir(d,function(e){});\"",
        "build:script": "webpack -p",
        "prebuild:style": "node -e \"var d='docs/css',fs=require('fs-extra');fs.ensureDir(d,function(e){});\"",
        "build:style": "stylus src/assets/stylus/main.styl -c -o docs/css",
        "build:markup": "pug src -o docs",
        "build": "npm-run-all clean --parallel build:*",
        "watch:style": "npm run build:style -- -w",
        "watch:markup": "npm run build:markup -- -w",
        "watch": "run-p watch:*",
        "open:dev": "opener http://localhost:8080/webpack-dev-server/",
        "serve": "webpack-dev-server --content-base docs/",
        "dev": "npm-run-all clean open:dev --parallel watch serve"
    },
    "devDependencies": {
        "elm": "^0.17.1",
        "elm-webpack-loader": "^3.0.6",
        "fs-extra": "^0.30.0",
        "ghooks": "^1.3.2",
        "npm-run-all": "^3.1.0",
        "opener": "^1.4.2",
        "pug-cli": "^1.0.0-alpha6",
        "stylus": "^0.54.5",
        "webpack": "^1.13.2",
        "webpack-dev-server": "^1.16.0"
    }
}
