{
    "name": "elm-is-fun",
    "description": "An elm pilot test by myself.",
    "repository": "https://github.com/luckynum7/elm-is-fun.git",
    "license": "MIT",
    "config": {
        "ghooks": {
            "pre-commit": "echo commiting",
            "pre-push": "npm test && echo https://luckynum7.github.io/elm-is-fun/"
        }
    },
    "scripts": {
        "postinstall": "elm-package install",
        "test": "elm-test",
        "clean": "node -e \"var d='_build',fs=require('fs-extra');fs.emptydir(d);\"",
        "build-js": "webpack -p",
        "prebuild:style": "node -e \"var d='_build/css',fs=require('fs-extra');fs.ensureDir(d);\"",
        "build:style": "stylus src/assets/stylus/main.styl -c -o _build/css",
        "build:markup": "pug src -o _build",
        "build": "npm-run-all clean --parallel build-js build:*",
        "watch:build": "run-p \"build:* -- -w\"",
        "watch:test": "elm-test -w",
        "watch": "run-p watch:*",
        "deploy:sync": "node -e \"var s='_build',d='docs',fs=require('fs-extra');fs.emptydir(d,function(err){if(!err)fs.copy(s,d)});\"",
        "deploy": "run-s test build deploy:sync",
        "open:prod": "opener https://luckynum7.github.io/elm-is-fun/",
        "open:dev": "opener http://localhost:8080/webpack-dev-server/",
        "serve": "webpack-dev-server --content-base _build/",
        "dev": "npm-run-all clean --parallel serve watch open:dev"
    },
    "devDependencies": {
        "elm": "^0.17.1",
        "elm-test": "^0.17.3",
        "elm-webpack-loader": "^3.0.6",
        "fs-extra": "^0.30.0",
        "ghooks": "^1.3.2",
        "npm-run-all": "^3.1.0",
        "opener": "^1.4.2",
        "pug-cli": "^1.0.0-alpha6",
        "stylus": "^0.54.5",
        "webpack": "^1.13.2",
        "webpack-dev-server": "^1.16.0"
    }
}
